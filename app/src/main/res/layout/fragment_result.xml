<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ResultFragment">

    <!-- Face image preview (Fixed at the top) -->
    <ImageView
        android:id="@+id/iv_face_image_preview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="@string/picture_face_upload"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_insert_photo"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:clipToPadding="false"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title Text -->
            <TextView
                android:id="@+id/tv_title_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Result"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Date and Time Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:background="@drawable/rounded_background"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_calendar"
                    android:contentDescription="@string/calendar_icon_description"
                    app:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    tools:text="10/10/2010"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/baseline_time"
                    android:contentDescription="@string/time_icon_history_description"
                    app:tint="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    tools:text="10:10"/>
            </LinearLayout>


            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_result_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/item_analyze" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Custom Button with rounded background -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/frame_top_rounded">

        <Button
            android:id="@+id/button_to_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/toproduct_button_string"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/button_rounded" />
    </FrameLayout>
</FrameLayout>
